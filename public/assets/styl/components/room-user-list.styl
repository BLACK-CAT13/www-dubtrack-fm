#main_avatar_room
	display none
	position relative
	width 100%
	height 100%
	padding: 6.5rem 0 1rem 0

	.role-colors-disabled
		#main-user-list-room
			#avatar-list
				li
					&.dj
					&.resident-dj
					&.vip
					&.mod
					&.manager
					&.co-owner
					&.creator
					&.admin
						.username
						.user-role
							color $white

	.avatar_tools
		position absolute
		padding: 0 1rem
		width 100%
		top 4rem
		left 0
		display block
		margin-bottom 1rem

		input
			border-bottom 1px solid $meta-color
			padding 0
			width 69%

		.filter-toggle
			position absolute
			right 1rem
			top -1px
			border 1px solid $meta-color
			width 28%
			text-align center
			cursor pointer
			font-weight 600
			user-select none

			&:hover
				color $accent-color

	.loadingAva
		display none

	#avatar
	.tabsContainer
		width 100%
		height 100%

	#main-user-list-room
		width 100%
		height 100%
		position relative
		overflow hidden

		#avatar-list
			padding 0 1rem

			li
				display block
				margin-bottom 0.5rem
				cursor pointer
				animation fadein 0.5s

				@keyframes fadein {
					from { opacity: 0 }
					to   { opacity: 1 }
				}

				.user-role-icon
					text-indent -9999rem
					width 1em
					height 1em
					background-size 1em 1em
					display none
					margin-right 0.25rem

				.user-role
					display none
					margin-left 0.25rem
					transition-property opacity
					transition-duration 0.5s
					opacity 0.5

				&:hover
					.user-role
						transition-property opacity
						transition-duration 0.5s
						opacity 1

				user-roles()

				p
					display inline-block
					margin 0
					padding 0
					font-weight bold

					&.dubs
						text-align right
						float right
						color $meta-color
